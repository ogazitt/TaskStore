<?xml version= "1.0"?>

<grammar mode="voice"
         root="main"
         tag-format="semantics/1.0"
         version="1.0"
         xml:lang="en-US"
         xmlns="http://www.w3.org/2001/06/grammar">

  <rule id="main" scope="public">
   <ruleref uri="#Date"/>
   <tag>out = rules.latest();</tag>
  </rule>

  <rule id="Date" scope="public">

    <tag>var result = new Object();
     result.day = "";
     result.month = "";
     result.dow = "";
     result.special = "";
     result.year = "";
    </tag>

    <!-- optional prefiller -->
    <item repeat="0-1"><item repeat="0-1">on</item>the</item>

    <!-- date -->
    <one-of>
     <item weight="0.1">
       <item><ruleref uri="#Month"/></item>
       <tag>result.month = rules.latest();</tag>
     </item>
     <item weight="0.9">
      <one-of>
        <item>
          <item>
            <item><ruleref uri="#MonthNum"/></item>
            <tag>result.month = rules.latest();</tag>
          </item>
          <item>
            <item><ruleref uri="#Day"/></item>
            <tag>result.day = rules.latest();</tag>
          </item>
          <item repeat="0-1">
            <item><ruleref uri="#Year"/></item>
            <tag>result.year = rules.latest();</tag>
          </item>
        </item>

        <item>
          <item>
            <item><ruleref uri="#Month"/></item>
            <tag>result.month = rules.latest();</tag>
          </item>
          <one-of>
            <item>
              <item><ruleref uri="#Day"/></item>
              <tag>result.day = rules.latest();</tag>
            </item>
            <item>
              <item><ruleref uri="#DayOrd"/></item>
              <tag>result.day = rules.latest();</tag>
            </item>
          </one-of>
          <item repeat="0-1">
            <item><ruleref uri="#Year"/></item>
            <tag>result.year = rules.latest();</tag>
          </item>
        </item>

        <item>
          <item>
            <item><ruleref uri="#DayOrd"/></item>
            <tag>result.day = rules.latest();</tag>
          </item>
          <item repeat-prob="0.98999" repeat="0-1">of</item>
          <item>
            <item><ruleref uri="#Month"/></item>
            <tag>result.month = rules.latest();</tag>
          </item>
          <item repeat="0-1">
            <item><ruleref uri="#Year"/></item>
            <tag>result.year = rules.latest();</tag>
          </item>
        </item>

        <item>
          <one-of>
            <item>
              <item><ruleref uri="#DayOfWeek"/></item>
              <tag>result.dow = rules.latest();</tag>
            </item>
            <item>
              <item><ruleref uri="#RelativeDay"/></item>
              <tag>result.special = rules.latest();</tag>
            </item>
          </one-of>
          <item>
            <item><ruleref uri="#MonthNum"/></item>
            <tag>result.month = rules.latest();</tag>
          </item>
          <item>
            <item><ruleref uri="#Day"/></item>
            <tag>result.day = rules.latest();</tag>
          </item>
        </item>

        <item>
          <one-of>
            <item>
              <item repeat="0-1">
                <item><ruleref uri="#DayQualifier"/></item>
                <tag>result.special = rules.latest();</tag>
              </item>
              <item><ruleref uri="#DayOfWeek"/></item>
              <tag>result.dow = rules.latest();</tag>
            </item>
            <item>
              <item><ruleref uri="#RelativeDay"/></item>
              <tag>result.special = rules.latest();</tag>
            </item>
          </one-of>
          <item repeat="0-1">
            <item repeat="0-1">
              <item><ruleref uri="#Month"/></item>
              <tag>result.month = rules.latest();</tag>
            </item>
            <one-of>
              <item>
                <item><ruleref uri="#Day"/></item>
                <tag>result.day = rules.latest();</tag>
              </item>
              <item>
                <item><ruleref uri="#DayOrd"/></item>
                <tag>result.day = rules.latest();</tag>
              </item>
            </one-of>
            <item repeat="0-1">
              <item><ruleref uri="#Year"/></item>
              <tag>result.year = rules.latest();</tag>
            </item>
          </item>
        </item>

        <item>
          <item><ruleref uri="#DayOrd"/></item>
          <tag>result.day = rules.latest();</tag>
        </item>

        <item>
          <item>
            <item><ruleref uri="#DayOfWeek"/></item>
            <tag>result.dow = rules.latest();</tag>
          </item>
        </item>

        <item>
          <item>
            <item><ruleref uri="#RelativeDay"/></item>
            <tag>result.special = rules.latest();</tag>
          </item>
        </item>
      </one-of>
     </item>
    </one-of>

    <tag>out = "day=" + result.dow + 
                    "^date=" + result.day + 
                    "^month=" + result.month +
                    "^year=" + result.year +
                    "^special_date=" + result.special;
    </tag>
  </rule>

